<Window x:Class="Main.LekarzWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lekarz" Width="900" Height="600">
    <!-- Zwiększono szerokość okna -->
    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock x:Name="PeselTextBlock" Text="Wprowadź PESEL" Foreground="Gray" Margin="0,0,0,5" Visibility="Visible"/>
                <TextBox x:Name="PeselTextBox" Width="250" Height="30" Margin="0,0,0,10" TextChanged="PeselTextBox_TextChanged"/>
            </StackPanel>

            <TextBlock Text="Typy Leków:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ItemsControl x:Name="TypyLekowPanel" Margin="0,0,0,10"/>

            <TextBlock Text="Wybierz leki do recepty:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox x:Name="LekiListBox" SelectionMode="Multiple" Height="200" Width="400" Margin="0,0,0,10"/>

            <TextBlock Text="Zalecenia:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="ZaleceniaTextBox" Width="400" Height="100" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <Button Content="Stwórz Receptę" Width="150" Height="40" Click="CreateRecepta_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
