<Window x:Class="Main.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Potwierdzenie zamówienia" Height="150" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Text="Czy na pewno chcesz złożyć zamówienie?" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="ConfirmButton" Content="Tak" Width="75" Margin="5" Click="ConfirmButton_Click"/>
            <Button Name="CancelButton" Content="Anuluj" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
